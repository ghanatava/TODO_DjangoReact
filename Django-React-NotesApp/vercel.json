{
    "version": 2,
    "builds": [
      {
        "src": "frontend/",  
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/build"  
        }
      },
      {
        "src": "backend/**",  
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",  // Adjust the path to your Django API endpoints
        "dest": "backend/api/$1",  // Adjust the path to your Django API routes
        "methods": ["GET", "POST", "PUT", "DELETE"]  // Adjust the allowed HTTP methods
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/$1"  // Adjust the path to your frontend build output
      }
    ]
  }
  